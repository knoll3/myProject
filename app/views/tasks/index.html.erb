<div class="header">
	<div class="logo">workSMART</div>
</div>

<div class="main">

	<div id="goal-box">

		<div id="goal-header">
			<h3>Weekly Targets</h3>
			<div class="icon">X</div>
		</div>

		<br class="clear"></br>
		
		<hr style="margin:0">

		<div id="goals">
			<% @goals.each do |goal| %>
				<div class="goal-card">
					<span id="goal-name"><%= goal.name %></span>
					<span id="goal-target"><%= goal.target %></span>
				</div>		
			<% end %>

		</div>

		<hr style="margin:0">

		<div id="new-goal">
			<%= link_to '+ New goal', new_goal_path %>
		</div>

	</div>

	<div id="to-do-box">
		<div id="to-do-header">
			<h3>Tasks</h3>
		</div>
		<hr style="margin:0">

		<div id="to-do-tasks">

			<% @tasks.each do |task| %>

				<div class="task-card">
					<span id="task-name"><%= task.name %></span><br>
					<span id="task-description"><%= task.description %></span>
				</div>
			<% end %>

		</div>

		<hr style="margin:0">

		<div id="new-task">
			<%= link_to '+ New task', new_task_path %>
		</div>
	</div>


</div>
